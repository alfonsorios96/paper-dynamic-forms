{
  "verbose": true,
  "plugins": {
    "local": {
      "browsers": [
        "chrome",
        "firefox"
      ]
    },
    "istanbul": {
      "dir": "coverage",
      "reporters": [
        "text-summary",
        "lcov"
      ],
      "include": [
        "**/paper-dynamic-forms.js"
      ],
      "exclude": [
        "**/bower_components/**/*",
        "**/test/*.html"
      ],
      "thresholds": {
        "global": {
          "statements": 100,
          "branches": 100,
          "lines": 100,
          "functions": 100
        }
      }
    }
  }
}
